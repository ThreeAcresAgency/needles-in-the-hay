{% doc %}
  @prompt
    I need a blog block to show the last 3 blog posts with title, snippet & a read more button

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-posts-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-blog-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;}

  .ai-blog-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.card_spacing }}px;}

  @media screen and (max-width: 990px) {
    .ai-blog-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }

  .ai-blog-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    height: 100%;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    box-shadow: 0 {{ block.settings.card_shadow }}px {{ block.settings.card_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  {% if block.settings.card_hover_effect !='none' %}
    .ai-blog-card-{{ ai_gen_id }}:hover {
      {% if block.settings.card_hover_effect == 'lift' %}
        transform: translateY(-{{ block.settings.card_shadow }}px);
        box-shadow: 0 {{ block.settings.card_shadow | times: 2 }}px {{ block.settings.card_shadow | times: 3 }}px rgba(0, 0, 0, 0.15);
      {% elsif block.settings.card_hover_effect == 'scale' %}
        transform: scale(1.03);
      {% endif %}
    }
  {% endif %}

  .ai-blog-card-image-container-{{ ai_gen_id }} {
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    position: relative;
    overflow: hidden;
  }

  .ai-blog-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  {% if block.settings.image_hover_effect == 'zoom' %}
    .ai-blog-card-{{ ai_gen_id }}:hover .ai-blog-card-image-{{ ai_gen_id }} {
      transform: scale(1.1);
    }
  {% endif %}

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_color }};}

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.5;
  }

  .ai-blog-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;}

  .ai-blog-card-title-{{ ai_gen_id }} {
    margin-top: 0;
    margin-bottom: {{ block.settings.title_spacing }}px;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-blog-card-title-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
  }

  .ai-blog-card-date-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.date_spacing }}px;
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.date_color }};
  }

  .ai-blog-card-excerpt-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.excerpt_spacing }}px;
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.excerpt_color }};
    line-height: 1.5;
    flex-grow: 1;
  }

  .ai-blog-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    font-size: {{ block.settings.button_font_size }}px;
    text-align: center;
    transition: background-color 0.3s ease, color 0.3s ease;
    align-self: {{ block.settings.button_alignment }};
  }

  .ai-blog-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }
{% endstyle %}

<div class="ai-blog-posts-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-blog-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="ai-blog-grid-{{ ai_gen_id }}">
    {% if block.settings.blog != blank %}
      {% for article in block.settings.blog.articles limit: block.settings.posts_count %}
        <div class="ai-blog-card-{{ ai_gen_id }}">
          <a href="{{ article.url }}" class="ai-blog-card-image-container-{{ ai_gen_id }}">
            {% if article.image %}
              <img
                src="{{ article.image | image_url: width: 800 }}"
                alt="{{ article.image.alt | escape }}"
                loading="lazy"
                class="ai-blog-card-image-{{ ai_gen_id }}"
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
              >
            {% else %}
              <div class="ai-blog-card-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </a>

          <div class="ai-blog-card-content-{{ ai_gen_id }}">
            {% if block.settings.show_date %}
              <div class="ai-blog-card-date-{{ ai_gen_id }}">
                {{ article.published_at | date: block.settings.date_format }}
              </div>
            {% endif %}

            <h3 class="ai-blog-card-title-{{ ai_gen_id }}">
              <a href="{{ article.url }}" class="ai-blog-card-title-link-{{ ai_gen_id }}">
                {{ article.title }}
              </a>
            </h3>

            {% if block.settings.show_excerpt %}
              <div class="ai-blog-card-excerpt-{{ ai_gen_id }}">
                {% if article.excerpt != blank %}
                  {{ article.excerpt | strip_html | truncatewords: block.settings.excerpt_words }}
                {% else %}
                  {{ article.content | strip_html | truncatewords: block.settings.excerpt_words }}
                {% endif %}
              </div>
            {% endif %}

            <a href="{{ article.url }}" class="ai-blog-card-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        </div>
      {% endfor %}
    {% else %}
      {% for i in (1..3) %}
        <div class="ai-blog-card-{{ ai_gen_id }}">
          <div class="ai-blog-card-image-container-{{ ai_gen_id }}">
            <div class="ai-blog-card-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>

          <div class="ai-blog-card-content-{{ ai_gen_id }}">
            {% if block.settings.show_date %}
              <div class="ai-blog-card-date-{{ ai_gen_id }}">
                {{ 'now' | date: block.settings.date_format }}
              </div>
            {% endif %}

            <h3 class="ai-blog-card-title-{{ ai_gen_id }}">
              Sample Blog Post Title
            </h3>

            {% if block.settings.show_excerpt %}
              <div class="ai-blog-card-excerpt-{{ ai_gen_id }}">
                This is a sample blog post excerpt. Select a blog in the settings to display your actual blog posts.
              </div>
            {% endif %}

            <a href="#" class="ai-blog-card-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

